{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["config/*"],
      "@common/*": ["common/*"],
      "@constants/*": ["constants/*"],
      "@db/*": ["db/*"],
      "@module/*": ["src/modules/*"],
      "@src/*": ["src/*"]
    }
  },

  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts", "knexfile.ts"],
  "exclude": ["node_modules", "dist"]
}
